@model MvcOgrOkul.Models.EntityFramework.TBLOGRENCILER
@{
    ViewBag.Title = "OgrGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("OgrGuncelle", "Öğrenci", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.OGRAD)
        @Html.TextBoxFor(m => m.OGRAD, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OGRSOYAD)
        @Html.TextBoxFor(m => m.OGRSOYAD, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OGRFOTOGRAF)
        @Html.TextBoxFor(m => m.OGRFOTOGRAF, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OGRCINSIYET)
        @Html.TextBoxFor(m => m.OGRCINSIYET, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OGRKULUP)
        @Html.DropDownListFor(m => m.TBLKULUPLER.KULUPID, (List<SelectListItem>)ViewBag.guncelleyenler, new { @class = "form-control" })

    </div>
    @Html.HiddenFor(m => m.OGRID)
    <div style="margin-top:15px;">
        <button class="btn btn-primary"> Öğrenci Güncelle</button>
    </div>

}

